{
  "name": "Product API Test Collection",
  "description": "Test data for Product API endpoints",
  "endpoints": {
    "get_all_products": {
      "method": "GET",
      "url": "/api/v1/products",
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
      "expected_response": {
        "success": true,
        "data": [
          {
            "product_id": 1,
            "sku": "MED001",
            "name": "Paracetamol 500mg",
            "description": "Pain relief medication",
            "category": "Medicine",
            "price": 15.99,
            "cost": 8.50,
            "quantity": 100,
            "unit": "tablets",
            "manufacturer": "PharmaCorp",
            "expiration_date": "2025-12-31"
          }
        ],
        "message": "Products retrieved successfully"
      }
    },
    "get_single_product": {
      "method": "GET",
      "url": "/api/v1/products/1",
      "headers": {
        "Accept": "application/json"
      },
      "expected_response": {
        "success": true,
        "data": {
          "product_id": 1,
          "sku": "MED001",
          "name": "Paracetamol 500mg",
          "description": "Pain relief medication",
          "category": "Medicine",
          "price": 15.99,
          "cost": 8.50,
          "quantity": 100,
          "unit": "tablets",
          "manufacturer": "PharmaCorp",
          "expiration_date": "2025-12-31"
        },
        "message": "Product retrieved successfully"
      }
    },
    "get_products_by_category": {
      "method": "GET",
      "url": "/api/v1/products/category/Medicine",
      "headers": {
        "Accept": "application/json"
      },
      "expected_response": {
        "success": true,
        "data": [
          {
            "product_id": 1,
            "sku": "MED001",
            "name": "Paracetamol 500mg",
            "description": "Pain relief medication",
            "price": 15.99,
            "quantity": 100,
            "unit": "tablets"
          }
        ],
        "message": "Products in category 'Medicine' retrieved successfully"
      }
    },
    "create_product": {
      "method": "POST",
      "url": "/api/v1/products",
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
      "request_body": {
        "sku": "MED002",
        "name": "Ibuprofen 400mg",
        "description": "Anti-inflammatory pain relief",
        "category": "Medicine",
        "price": 12.99,
        "cost": 6.50,
        "quantity": 50,
        "unit": "tablets",
        "manufacturer": "HealthPharma",
        "expiration_date": "2026-06-30",
        "is_active": true
      },
      "expected_response": {
        "success": true,
        "data": {
          "product_id": 2,
          "sku": "MED002",
          "name": "Ibuprofen 400mg",
          "description": "Anti-inflammatory pain relief",
          "category": "Medicine",
          "price": 12.99,
          "cost": 6.50,
          "quantity": 50,
          "unit": "tablets",
          "manufacturer": "HealthPharma",
          "expiration_date": "2026-06-30",
          "is_active": true
        },
        "message": "Product created successfully"
      }
    },
    "update_product": {
      "method": "PUT",
      "url": "/api/v1/products/1",
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
      "request_body": {
        "name": "Paracetamol 500mg - Updated",
        "price": 16.99,
        "quantity": 150
      },
      "expected_response": {
        "success": true,
        "data": {
          "product_id": 1,
          "sku": "MED001",
          "name": "Paracetamol 500mg - Updated",
          "description": "Pain relief medication",
          "category": "Medicine",
          "price": 16.99,
          "cost": 8.50,
          "quantity": 150,
          "unit": "tablets",
          "manufacturer": "PharmaCorp",
          "expiration_date": "2025-12-31",
          "is_active": true
        },
        "message": "Product updated successfully"
      }
    },
    "delete_product": {
      "method": "DELETE",
      "url": "/api/v1/products/1",
      "headers": {
        "Accept": "application/json"
      },
      "expected_response": {
        "success": true,
        "message": "Product deleted successfully"
      }
    },
    "check_availability": {
      "method": "POST",
      "url": "/api/v1/products/check-availability",
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
      "request_body": {
        "product_ids": [1, 2],
        "quantities": [2, 1]
      },
      "expected_response": {
        "success": true,
        "data": {
          "products": [
            {
              "product_id": 1,
              "sku": "MED001",
              "name": "Paracetamol 500mg",
              "price": 15.99,
              "requested_quantity": 2,
              "available_quantity": 100,
              "subtotal": 31.98,
              "available": true
            },
            {
              "product_id": 2,
              "sku": "MED002",
              "name": "Ibuprofen 400mg",
              "price": 12.99,
              "requested_quantity": 1,
              "available_quantity": 50,
              "subtotal": 12.99,
              "available": true
            }
          ],
          "total_amount": 44.97
        },
        "message": "Product availability checked successfully"
      }
    }
  }
}
