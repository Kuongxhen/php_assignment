{
  "name": "User API Test Collection",
  "description": "Test data for User API endpoints",
  "endpoints": {
    "get_all_users": {
      "method": "GET",
      "url": "/api/v1/users",
      "headers": {
        "Accept": "application/json"
      },
      "expected_response": {
        "success": true,
        "data": [
          {
            "id": 1,
            "name": "John Doe",
            "email": "john@example.com",
            "created_at": "2025-09-01T10:00:00Z",
            "updated_at": "2025-09-01T10:00:00Z"
          },
          {
            "id": 2,
            "name": "Jane Smith",
            "email": "jane@example.com",
            "created_at": "2025-09-02T14:30:00Z",
            "updated_at": "2025-09-02T14:30:00Z"
          }
        ],
        "message": "Users retrieved successfully"
      }
    },
    "get_single_user": {
      "method": "GET",
      "url": "/api/v1/users/1",
      "headers": {
        "Accept": "application/json"
      },
      "expected_response": {
        "success": true,
        "data": {
          "id": 1,
          "name": "John Doe",
          "email": "john@example.com",
          "created_at": "2025-09-01T10:00:00Z",
          "updated_at": "2025-09-01T10:00:00Z"
        },
        "message": "User retrieved successfully"
      }
    },
    "create_user": {
      "method": "POST",
      "url": "/api/v1/users",
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
      "request_body": {
        "name": "Bob Johnson",
        "email": "bob@example.com",
        "password": "password123",
        "password_confirmation": "password123"
      },
      "expected_response": {
        "success": true,
        "data": {
          "id": 3,
          "name": "Bob Johnson",
          "email": "bob@example.com",
          "created_at": "2025-09-08T12:00:00Z"
        },
        "message": "User created successfully"
      }
    },
    "update_user": {
      "method": "PUT",
      "url": "/api/v1/users/1",
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
      "request_body": {
        "name": "John Updated Doe",
        "email": "john.updated@example.com"
      },
      "expected_response": {
        "success": true,
        "data": {
          "id": 1,
          "name": "John Updated Doe",
          "email": "john.updated@example.com",
          "updated_at": "2025-09-08T12:30:00Z"
        },
        "message": "User updated successfully"
      }
    },
    "delete_user": {
      "method": "DELETE",
      "url": "/api/v1/users/1",
      "headers": {
        "Accept": "application/json"
      },
      "expected_response": {
        "success": true,
        "message": "User deleted successfully"
      }
    },
    "validation_errors": {
      "method": "POST",
      "url": "/api/v1/users",
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
      "request_body": {
        "name": "",
        "email": "invalid-email",
        "password": "123"
      },
      "expected_response": {
        "message": "The name field is required. (and 2 more errors)",
        "errors": {
          "name": ["The name field is required."],
          "email": ["The email field must be a valid email address."],
          "password": ["The password field must be at least 8 characters."]
        }
      }
    }
  }
}
